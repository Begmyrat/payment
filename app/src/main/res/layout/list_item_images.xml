<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingHorizontal="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/c_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/Altbaslik_gri"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/i_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/t_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cardview"
        app:layout_constraintTop_toTopOf="@+id/cardview"
        android:text="Fast Food"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/josefin_sans_bold"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/t_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/t_title"
        app:layout_constraintTop_toBottomOf="@+id/t_title"
        android:text="Total: 24 items"
        android:fontFamily="@font/josefin_sans_regular"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/cardview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="$232.75"
        android:textColor="@color/textPrimaryColor"
        android:fontFamily="@font/josefin_sans_bold"
        android:textSize="20sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>